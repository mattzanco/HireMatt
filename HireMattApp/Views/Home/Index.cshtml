@{
    ViewData["Title"] = "Matt Zanco - Senior Software Engineer";
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="business-card p-5 w-100" style="max-width: 600px;">
            <!-- Fade-in animation on page load -->
        <div class="text-center">
            <h1 class="display-4 text-muted" style="font-size:2rem; font-weight:bold;">Building software that moves business forward</h1>
        </div>
        <div class="text-start">
            <p>Matt Zanco is a senior full-stack software engineer who brings years of experience in designing and delivering high-quality systems. He’s committed to clear communication, dependable results, and collaborative problem-solving—whether leading projects or contributing as a hands-on developer. Let’s build something great together.</p>
            <p>Open to contracts or full time opportunities. Remote ready. — <strong>Matt Zanco, Sr Software Engineer</strong>.</p>
            <div class="text-center mb-3">
                <a href="/Home/About" class="learn-more-link">Learn More</a>
            </div>
            <hr class="my-4" />
            <div class="text-center">
                <div class="d-flex flex-column flex-md-row justify-content-center gap-2">
                      <a href="https://www.linkedin.com/in/matt-zanco-107723348/" target="_blank" class="btn btn-outline-primary">Connect on LinkedIn</a>
                      <a href="https://github.com/mattzanco" target="_blank" class="btn btn-outline-dark">View on GitHub</a>
                      <a href="mailto:mattzanco@gmail.com" class="btn btn-outline-danger">Send an Email</a>
                </div>
            </div>
        </div>
    </div>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('.btn').forEach(function(btn) {
            btn.addEventListener('mouseup', function() { this.blur(); });
            btn.addEventListener('mouseleave', function() { this.blur(); });
        });

        // Fade in animation for business card
        var businessCard = document.querySelector('.business-card');
        if (businessCard) {
            businessCard.style.opacity = 0;
            businessCard.style.transition = 'opacity 0.7s';
            setTimeout(function() {
                businessCard.style.opacity = 1;
            }, 50);
        }
    });
</script>
</div>
