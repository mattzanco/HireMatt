@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Hire Matt Zanco</h1>
    <h2 class="h4 text-muted">Senior Software Engineer — Delivering reliable, scalable systems</h2>

    <div class="text-start w-75 mx-auto">
        <p>Matt brings years of experience building production-grade full-stack applications. He designs and delivers scalable, maintainable architectures, drives cross-functional collaboration and mentors teams, writes clean, well-tested code and improves developer productivity, and focuses on measurable business impact and reliable delivery.</p>

        <p>Ready to move fast without sacrificing quality — <strong>hire Matt Zanco, Sr Software Engineer</strong>.</p>

        <hr class="my-4" />

        <h3 class="h5 mb-3">Get in touch</h3>
        <form method="post" action="@Url.Action("Contact", "Home")">
            <div class="mb-3">
                <input type="text" class="form-control" name="name" placeholder="Your name" required />
            </div>
            <div class="mb-3">
                <input type="email" class="form-control" name="email" placeholder="Your email" required />
            </div>
            <div class="mb-3">
                <textarea class="form-control" name="message" placeholder="Your message" rows="4" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Send</button>
        </form>

        <hr class="my-4" />

        <p>
            <a href="https://www.linkedin.com/in/matt-zanco-107723348/" target="_blank" class="btn btn-outline-primary">Connect on LinkedIn</a>
            <a href="https://github.com/mattzanco" target="_blank" class="btn btn-outline-dark">View on GitHub</a>
        </p>
    </div>
</div>
